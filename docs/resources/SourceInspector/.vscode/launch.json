{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Open index.html with TestClass.js (file://)",
            "url": "file://${workspaceFolder}/index.html?path=${workspaceFolder}/test/TestClass.js&beginLine=6&endLine=8",
            "webRoot": "${workspaceFolder}",
            "args": [
                "--allow-file-access-from-files"
            ]
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Open index.html with TestClass.js (https://localhost:9000)",
            "url": "https://localhost:9000/docs/resources/SourceInspector/index.html?path=/docs/resources/SourceInspector/test/TestClass.js&beginLine=6&endLine=8",
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "sourceMapPathOverrides": {
                "webpack:///./src/*": "${webRoot}/*"
            }
        }
    ]
}